@{
    ViewData["Title"] = "Editor Policy";
}
<div class="container mt-4">
    <h1 class="text-center">Stok Yönetimi</h1>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Alış Bedeli</th>
                <th>Satış Bedeli</th>
                <th>Stok</th>
                <th>Görsel</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Domates</td>
                <td><input type="number" class="form-control" value="1"></td>
                <td><input type="number" class="form-control" value="3"></td>
                <td><input type="number" class="form-control" value="30"></td>
                <td><input type="text" class="form-control" placeholder="Görsel URL"></td>
                <td>
                    <button class="btn btn-primary">Güncelle</button>
                    <button class="btn btn-danger">Ürünü Sil</button>
                </td>
            </tr>
        </tbody>
    </table>

    <h3>Ürün Ekle</h3>
    <div class="row">
        <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Ürün Adı">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" placeholder="Alış Bedeli">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" placeholder="Satış Bedeli">
        </div>
        <div class="col-md-2">
            <input type="number" class="form-control" placeholder="Stok">
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" placeholder="Görsel URL">
        </div>
        <div class="col-md-2">
            <button class="btn btn-success w-100">Ekle</button>
        </div>
    </div>
</div>
