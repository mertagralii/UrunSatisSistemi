@model List<Products>
@{
    ViewData["Title"] = "Satış Sayfası";
    
}

<div class="container mt-4">
    <h1 class="text-center">Ürün Satış Sistemi</h1>
    <div class="row">
        <!-- Ürün Kartları -->
        <div class="col-md-8">
            <div class="row row-cols-1 row-cols-md-4 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card">
                            <img src="@item.ImageURL" class="card-img-top" alt="@item.Name">
                            <div class="card-body text-center">
                                <h5 class="card-title">@item.Name</h5>
                                <p>Stok: @item.Stok KG</p>
                                <p>Fiyat: @item.SalesPrice TL</p>
                                <input type="radio" name="product" value="@item.Name"> Seç
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Satış Paneli -->
        <div class="col-md-4 position-sticky" style="top: 20px;">
            <div class="border p-3 mb-3 bg-white shadow-sm">
                <h4>Satış Yap</h4>
                <div>
                    <input type="radio" name="payment" value="cash"> Nakit
                    <input type="radio" name="payment" value="card"> Kredi Kartı
                </div>
                <input type="text" class="form-control my-2" placeholder="Alınan Para">
                <button class="btn btn-primary w-100">Ödeme Al</button>
            </div>
            <div class="border p-3 bg-white shadow-sm">
                <h4>Kazanç Raporu</h4>
                <p>Toplam Ciro: 500 TL</p>
                <p>Kar: 350 TL</p>
            </div>
        </div>
    </div>
</div>

<style>
    .position-sticky {
        position: -webkit-sticky;
        position: sticky;
    }
</style>
